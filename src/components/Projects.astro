---
interface Props {
  
}

import { cardData } from "../components/CardProjects.astro";
import Code from "../icons/Code.astro";
---



<div class="flex flex-col  pt-[11em] ">
 <h2 class="flex items-center gap-2 text-5xl font-extrabold  ">
    Projects  <Code/>
 </h2>
  {
    cardData.map((card) => (
      <div  class="xl:gap-16 xs:gap-5  xl:flex xl:flex-nowrap xs:flex-wrap pt-20  ">
        <div class="xl:w-[50%] h-[350px] xs:w-full relative overflow-hidden  ">
          <img
            class="z-10 absolute transition duration-300 transform hover:scale-50 zoom-image  cursor-pointer rounded-lg object-cover  xl:h-[400px] xl:pb-0 xs:pb-10 xs:h-[250px]"
            src={card.imageUrl}
            alt={card.title}
          />
        </div>

        <div class="w-[50%] flex justify-center gap-5   xs:flex xs:flex-col  xs:flex-wrap">
          <span class="flex gap-2">
            {card.pastillas.map((pastilla, index) => (
              <a
                href="#"
                class={`px-2 py-1 rounded-lg text-[12px] text-white ${index === 0 ? "bg-red-500" : index === 1 ? "bg-blue-500" : "bg-green-500"}`}
              >
                {pastilla}
              </a>
            ))}
          </span>

          <div class="flex flex-col gap-2">
            <p>{card.title}</p>
            <p class="xs:text-[12px] xl:text-[16px] ">{card.description}</p>
            <p class="xs:text-[12px] xl:text-[16px] ">{card.description2}</p>

          <div class="flex gap-5 pt-5">
            <a class="text-center bg-black p-2 rounded-lg" href={card.github}>GITHUB LINK</a>
            <a class="text-center bg-black p-2 rounded-lg" href={card.link}>
              DEMO
            </a>
          </div>
           
          </div>

        </div>
      </div>
    ))
  }
</div>
